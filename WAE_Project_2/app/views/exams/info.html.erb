<div class="container">
  <h2>Admin Controls</h2>
  <h3>Pending Request</h3>
  <table class ="table table-striped">
    <thead>
    <tr>
      <th>Request Id</th>
      <th>Course</th>
      <th>Exam Type</th>
      <th>Question / Answers</th>
      <th>Department</th>
      <th>School</th>
      <th>Year</th>
      <th>Uploaded By</th>
      <th>Approve</th>
    </tr>
    </thead>

    <tbody>
    <% @exams.each do |exam| %>
        <tr>
          <td style="width: 100px"><%= exam.id %></td>
          <td style="width: 250px"><%= @courses.find(exam.course_id).coursename%></td>
          <td style="width: 250px"><%= exam.examtype %></td>
          <td style="width: 150px"><%= exam.posttype %></td>
          <td style="width: 150px"><%= @deps.find(@courses.find(exam.course_id).department_id).departmentname %></td>
          <td style="width: 100px"><%= @schools.find(@deps.find(@courses.find(exam.course_id).department_id).school_id).schoolname %></td>
          <td style="width: 100px"><%= exam.year %></td>
          <td style="width: 150px"><%= @users.find(exam.user_id).email %></td>
          <td style="width: 220px">
            <%=link_to 'Accept',edit_exam_path(exam.id, :accept => 1, :acceptedby => current_user.id) , class: 'btn btn-primary'%>
            <%=link_to 'Reject',edit_exam_path(exam.id, :accept => 0) , class: 'btn btn-danger'%>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
